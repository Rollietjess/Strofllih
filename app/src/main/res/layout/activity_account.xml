    <TextView
        android:id="@+id/account_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textSize="25dp"
        android:gravity = "center"
        android:textColor="@color/secondaryColor"
